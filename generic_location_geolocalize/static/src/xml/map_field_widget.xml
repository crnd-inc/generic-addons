<templates>

    <div t-name="map_field_widget" owl="1" class="map_field_widget">
        <button
            t-on-click="onClickSelectGeolocationOnTheMap">
            <i class="fa fa-map-marker"/>
            Select on the map
        </button>
    </div>

    <t t-name="generic_location_geolocalize.map_field_widget_popover">
        <div class="map_field_widget_popover">
            <span class="close_map_popover_btn"><i class="fa fa-close"/></span>
            <div class="map_container"/>
        </div>
    </t>

</templates>
